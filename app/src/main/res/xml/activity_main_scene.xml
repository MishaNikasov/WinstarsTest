<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/fromStartToEnd"
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="400">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/arrow"
                motion:framePosition="100"
                android:rotation="180" />
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/arrow" />
    </Transition>

    <Transition
        android:id="@+id/fromSignToStart"
        motion:duration="400"
        motion:constraintSetStart="@+id/signIn"
        motion:constraintSetEnd="@+id/start" />

    <Transition
        android:id="@+id/fromStartToSign"
        motion:duration="400"
        motion:constraintSetEnd="@+id/signIn"
        motion:constraintSetStart="@+id/start" />

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:visibility="invisible"
            android:id="@+id/statisticRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:paddingTop="@dimen/basic_padding"
            android:paddingBottom="@dimen/basic_padding"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/nameText"
            motion:layout_constraintTop_toTopOf="@+id/transparentBg" />
        <Constraint
            android:alpha="0"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@+id/arrow"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/big_margin"
            motion:layout_constraintTop_toBottomOf="@+id/nameText"
            android:id="@+id/descriptionText" />
        <Constraint
            motion:layout_constraintBottom_toBottomOf="@+id/transparentBg"
            android:id="@+id/frameLayout"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:visibility="visible"
            android:id="@+id/statisticRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:paddingTop="@dimen/basic_padding"
            android:paddingBottom="@dimen/basic_padding"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/nameText"
            motion:layout_constraintTop_toTopOf="@+id/transparentBg" />
        <Constraint
            android:id="@+id/nav_host_fragment"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/statisticRecycler" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/signIn" >
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@+id/arrow"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/big_margin"
            motion:layout_constraintTop_toBottomOf="@+id/nameText"
            android:id="@+id/descriptionText" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/big_margin"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/descriptionText"
            android:id="@+id/transparentBg" />
        <Constraint
            android:id="@+id/toolbar"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/winstarsBigLogo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/big_margin"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/big_margin" />
        <Constraint
            android:id="@+id/nameText"
            motion:layout_constraintEnd_toStartOf="@+id/arrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/winstarsBigLogo"
            android:layout_marginStart="@dimen/big_margin"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/big_margin" />
        <Constraint
            android:visibility="invisible"
            android:id="@+id/statisticRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:paddingTop="@dimen/basic_padding"
            android:paddingBottom="@dimen/basic_padding"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/nameText"
            motion:layout_constraintTop_toTopOf="@+id/transparentBg" />
    </ConstraintSet>
</MotionScene>